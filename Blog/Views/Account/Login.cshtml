@model Blog.ViewModels.LoginViewModel
@{
    Layout = null;
    string returnUrl = Context.Request.Query["returnurl"];
}

<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MyBlog - Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>

    <style>
        html,
        body {
          height: 100%;
        }
        
        body {
          display: flex;
          align-items: center;
          padding-top: 40px;
          padding-bottom: 40px;
          background-color: #f5f5f5;
        }
        
        .form-signin {
          width: 100%;
          max-width: 330px;
          padding: 15px;
          margin: auto;
        }
        
        .form-signin .form-floating:focus-within {
          z-index: 2;
        }
        
        .form-fields input {
            margin-bottom: -1px;
        }
        
        .form-fields .form-floating:not(:first-child) input {
          border-top-left-radius: 0;
          border-top-right-radius: 0;
        }
        
        .form-fields .form-floating:not(:last-child) input {
          border-bottom-right-radius: 0;
          border-bottom-left-radius: 0;
        }
        
        .form-floating span:not(:empty) {
            margin-top: 2px;
            margin-bottom: 14px;
            display: inline-block;
            color: #a44;
        }
    </style>
</head>

<body class="text-center">
    <main class="form-signin">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" asp-route-returnurl="@returnUrl">
            <a href="/">
                <img class="mb-4" src="~/logo.svg" alt="" width="100" height="32">
            </a>
            <h1 class="h3 mb-3 fw-normal">Вход</h1>

            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-fields">
                <div class="form-floating">
                    <input type="email" asp-for="Email" class="form-control" id="emailInput" placeholder="name@example.com">
                    <label for="emailInput">Email</label>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-floating">
                    <input type="password" asp-for="Password" class="form-control" id="passwordInput" placeholder="Пароль">
                    <label for="passwordInput">Пароль</label>
                    <span asp-validation-for="Password"></span>
                </div>
            </div>

            <button class="w-100 col-s mt-3 btn btn-lg btn-primary" type="submit">Войти</button>
        </form>
    </main>
</body>
</html>